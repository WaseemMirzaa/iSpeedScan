# Uncomment this line to define a global platform for your project
platform :ios, '16.6'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # desired_ios_deployment = '16.6'  # unify all configs

  # --- 1) Project-level settings ---
  installer.pods_project.build_configurations.each do |config|
    # config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = desired_ios_deployment
  end

  # --- 2) Target-level settings & -G cleanup ---
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      flutter_additional_ios_build_settings(t) if defined?(flutter_additional_ios_build_settings)

      # normalize deployment target for every config
      # config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = desired_ios_deployment

      # strip '-G' from C/C++ flags
      candidate_keys = config.build_settings.keys.select { |k|
        k.to_s =~ /\AOTHER_(C|CPLUSPLUS|LIBTOOL)FLAGS(\[.*\])?\z/
      }
      candidate_keys.each do |key|
        val = config.build_settings[key]
        next if val.nil?
        if val.is_a?(String)
          config.build_settings[key] = val.split(/\s+/).reject { |tok| tok == '-G' }.join(' ')
        elsif val.is_a?(Array)
          config.build_settings[key] = val.reject { |tok| tok == '-G' }
        end
      end

      # exclude arm64 for simulator (optional, reduces Apple Silicon pain)
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] ||= "arm64"

      # permission defines
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_PHOTOS=1',
      ]
    end
  end

  # --- 3) Patch xcconfig files on disk (belt & suspenders) ---
  Dir.glob('Pods/Target Support Files/**/*.xcconfig').each do |xc|
    txt = File.read(xc)
    # unify deployment target
    # txt = txt.gsub(/(^|\n)IPHONEOS_DEPLOYMENT_TARGET\s*=\s*[^\n]*/, "\\1IPHONEOS_DEPLOYMENT_TARGET = #{desired_ios_deployment}")
    # remove -G tokens
    txt = txt.gsub(/(?<=^|[\s=])\-G(?=$|[\s#])/, '')
    # compress whitespace
    txt = txt.gsub(/[ \t]+/, ' ')
    File.write(xc, txt)
  end
end
